@model  IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h1>Movies</h1>
<br/>
<br/>
@if (Model.Count() == 0)
{
    <text>No Movies available right now.</text>
}
else
{
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Get Details</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
              @* for whole row as clickable  <tr onclick="location.href = '@(Url.Action("MovieInfo", "Movie", new { id = movie.Id }))'">
                <td>@movie.Name</td>
            </tr>*@
