                <td><a  asp-action="MovieInfo" asp-route-id="@movie.Id">Details</a></td>
                @*
                    Wont work as it gets stuck in last id always
                <td><a class="btn btn-primary stretched-link" asp-area="" asp-controller="Movie" asp-action="MovieInfo" asp-route-id="@movie.Id">Get Details</a></td>*@
                
                @* error because of class <td><a class="btn btn-primary stretched-link" asp-action="MovieInfo" asp-route-id="@movie.Id">Get Details</a></td>*@
                
            </tr>
          
        
            

        }
